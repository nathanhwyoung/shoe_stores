<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>SHOES</title>
    </head>
    <body>

        <div class='container'>

            <h1>{{ brand.getBrandName }}</h1>

            {% if stores is not empty %}
                <p>STORES THAT CARRY THIS BRAND:</p>
                <ul>
                    {% for store in stores %}
                        <li>{{ store.getStoreName }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <h4>ADD A STORE:</h4>

            <form action='/add_stores' method='post'>
                <input id="brand_id" name="brand_id" type="hidden" value="{{ brand.getId }}">
                <label for="store_id">SELECT STORE</label>
                <select id='store_id' name='store_id' type='text'>
                  {% for store in all_stores %}
                    <option value="{{ store.getId }}"> {{ store.getStoreName }} </option>
                  {% endfor %}
                </select>
                <button type='submit' class="btn btn-primary">SUBMIT</button>
            </form>

            <p><a href='/'>HOME</a></p>

        </div>


    </body>
</html>
